<?xml version="1.0" encoding="ISO-8859-1" ?>

<!--
	Java Game Framework Global Configuration File
	$Id$
 --> 	

<jgf>

	<!-- Application configuration -->
	<application>
	
		<!-- Name of the application. Will appear in the Window Title and messages. -->
		<name>Java Game Framework: Fader Test</name>
		
		<!-- Application version -->
		<version>1.0</version>
		
		<!-- Network protool -->
		<networkProtocolVersion>1.0</networkProtocolVersion>
		
		<!-- Debug mode -->
		<debug>true</debug>
		
		<!-- Engine reference -->
		<engine ref="engine" />
		
	</application>
	
	<!-- 
		Engine Component
	 -->
	<service id="engine" class="net.jgf.jme.engine.JMEEngine">

		<!-- Enable jME collection of rendering statistics -->
		<collectStats>${application/debug}</collectStats>

		<!-- Service reference to the Logic Manager -->
		<logicManager ref="logic" />
		
		<!-- Service reference to the State Manager -->
		<viewManager ref="view" />
		
	</service>
	
	<!-- 
		Logic Manager
	 -->
	<service id="logic" class="net.jgf.logic.DefaultLogicManager">
	
		<logic id="logic/root" class="net.jgf.logic.LogicStateNode">
			
		</logic>
		
	</service>
	
	<!-- 
		State Manager
	 -->
	<service id="view" class="net.jgf.view.DefaultViewManager" depends="engine">
			
			
		<!-- Using 2 nested faders to create a two-color fader effect -->
				
		<view id="view/root/fader1" class="net.jgf.jme.view.FaderViewNode" 
			autoLoad="true" autoActivate="true">		
			
			<fadeInTime>4.0</fadeInTime>
			<autoFadeOutTime>20.0</autoFadeOutTime>
			<fadeOutTime>15.0</fadeOutTime>
			<allowKeyToSkip>false</allowKeyToSkip>
			<color>0.0 0.0 0.0</color>
			
			<view id="view/root/fader1/fader2" class="net.jgf.jme.view.FaderViewNode" 
				autoLoad="true" autoActivate="true">
		
					<fadeInTime>10.0</fadeInTime>
					<autoFadeOutTime>10.0</autoFadeOutTime>
					<fadeOutTime>15.0</fadeOutTime>
					<allowKeyToSkip>false</allowKeyToSkip>
					<color>0.5 0.5 0.0</color>
					<deactivateOnFinish>false</deactivateOnFinish>
					
					<!-- Background sample scene -->
					<view id="view/root/box" class="net.jgf.example.fader.BoxView"
						autoLoad="true" autoActivate="true" >
					</view>
				
			</view>
			
		</view>
	
	</service>
	
</jgf>
 


